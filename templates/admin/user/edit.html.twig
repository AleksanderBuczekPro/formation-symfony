{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un compte utilisateur{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification d'un compte utilisateur</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Informations générales</h2>
                    <hr>
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.phoneNumber) }}
                    {{ form_row(form.picture) }}
                    {{ form_row(form.antenne) }}
                    {{ form_row(form.groupe) }}
                    {{ form_row(form.poste) }}
                </div>
            </div>
            <div class="col">

            
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <hr>
                    {{ form_row(form.introduction) }}
                    {{ form_row(form.description) }}

                    <hr>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Confirmez les modifications
                    </button>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
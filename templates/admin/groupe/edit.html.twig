{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'un groupe{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification d'un groupe</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">

                    {{ form_row(form.title) }}
                    {{ form_row(form.responsable) }}
                </div>
                
                <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Modifier le groupe
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
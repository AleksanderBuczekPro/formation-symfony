{% extends 'admin/base.html.twig' %}

{% block title %}Ajout d'un poste{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Ajout d'un poste</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">

                    {{ form_row(form.title) }}
                    
                    <div class="row">
                        <div class="col-5">{{ form_row(form.title) }}</div>
                    </div>
                </div>
                
                <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Ajouter le poste
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
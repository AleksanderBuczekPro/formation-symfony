{% extends 'admin/base.html.twig' %}

{% block title %}Gestion des postes{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mt-5">Gestion des postes</h1>
    <a href="{{ path('admin_poste_create') }}" class="btn btn-sm btn-primary mb-5">Ajouter un poste</a>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Poste</th>
                <th class="text-center">Nombre de salari√©s</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for poste in pagination.data %}
            <tr>
                <td>{{ poste.title }}</td>
                <td class="text-center"><span class="badge badge-dark">{{ poste.users|length }}</span></td>
                <td class="text-center">
                    <a href="{{ path('admin_poste_edit', {'id':  poste.id }) }}" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('admin_poste_delete', {'id':  poste.id }) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                </td>

            </tr>

            {% endfor %}
        </tbody>
    </table>

    {{ pagination.display() }}


</div>
{% endblock %}

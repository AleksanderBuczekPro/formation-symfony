{% extends 'admin/base.html.twig' %}

{% block title %}Modification d'une antenne{% endblock %}

{% block body %}

    <div class="container">
        <h1 class="my-5">Modification d'une antenne</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Informations générales</h2>
                    <hr>
                    {{ form_row(form.title) }}
                    
                    <div class="row">
                        <div class="col-5">{{ form_row(form.address) }}</div>
                        <div class="col-2">{{ form_row(form.postcode) }}</div>
                        <div class="col-5">{{ form_row(form.city) }}</div>
                    </div>
                    
                    
                    {{ form_row(form.phoneNumber) }}
                </div>
                
                <button type="submit" class="btn btn-success">
                        <i class="fas fa-check"></i> Modifier cette antenne
                </button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
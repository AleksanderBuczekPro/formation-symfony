{% extends 'login-base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="container login">

<div class="row">
    <div class="col-md-2">&nbsp;</div>
    <div class="col-md-8">
    
        <div class="bg-light py-3 px-3">

            <div class="card login">
                <div class="card-body">
                    <h3 mt-4 class="text-center mb-2">intramilo</h3>
                    <p class="text-center">Mot de passe oubli√©</p>

                    <div class="login-form">
                        <form action="{{ path('account_reset_password') }}" method="post" class="{% if no_email is defined and no_email %} was-validated {% endif %}">
                            <div class="form-group">
                                
                                <label for="email">Email</label>                                
                                <input type="text" name="email" id="email" class="form-control" placeholder="Tapez ici votre adresse mail" required>
                                {% if (no_email is defined) and no_email %}
                                    <div class="invalid-feedback">
                                    Cet email n'existe pas
                                    </div>
                                {% endif %}
                            </div>
                            <div class="form-group text-center">
                                <a href="{{ path('account_login') }}">
                                    <button type="button" class="btn btn-light btn-pill mt-3">Retour</button>
                                </a>
                                <button type="submit" class="btn btn-primary btn-pill mt-3">Modifier le mot de passe</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


            
        </div>

    </div>
</div>
    
</div>
{% endblock %}

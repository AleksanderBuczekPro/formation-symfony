{% extends 'base.html.twig' %}

{% block title %}Modification de la photo de profil{% endblock %}

{% block body %}
    <div class="container clearfix">
        

        {{ form_start(form) }}

        <div class="row">
            <div class="col-md-10 offset-md-1">
                <h1 class="my-5">Modification de la photo de profil <a href="{{ path('account_index') }}" class="ml-3 btn btn-outline-dark">Retour à mon profil</a></h1>
                
                 <div class="card p-4">
                    <div class="card-body">
                        <h6 class="card-title mb-3">Photo de profil actuelle</h6>
                        <div class="text-left">
                            {% if app.user.pictureFilename %}
                                {% include '_picture.html.twig' with {'user': app.user, 'class': 'large'} %}
                            {% else %}
                        

                        <p class="text">Pas de photo de profil. Ce sont donc vos initiales qui apparaîtront.</p>

                        {% endif %}
                        </div>
                    </div>
                </div>
                
                <div class="card p-4">
                    <div class="card-body">
                    <h6 class="card-title mb-3">Téléchargez un fichier JPG / JPEG depuis votre ordinatreur</h6>
                        
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-success float-right mt-4"><i class="fas fa-check"></i> Modifier la photo de profil</button>

                        {% if app.user.pictureFilename %}
                            <a href="{{ path('account_picture_delete') }}" class="btn btn-danger float-right mr-4 mt-4">Supprimer ma photo de profil</a>
                        {% endif %}
                    </div>
                </div>

            </div>
        </div>

            

            
            
            
        
        {{ form_end(form) }}

    </div>
    

{% endblock %}